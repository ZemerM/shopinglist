<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <packaging>pom</packaging>

	<groupId>com.sap.icf.samples</groupId><!-- TODO: Replace with own groupId -->
    <artifactId>shoppinglist-assembly</artifactId><!-- TODO: Replace with own artifactId -->
    <version>0.2.1-SNAPSHOT</version>

  	<parent>
  		<groupId>com.sap.xs.maven</groupId>
  		<artifactId>mta-parent</artifactId>
  		<version>1.4.0</version>
  		<relativePath/>
  	</parent>

    <dependencies><!-- TODO: Replace with your own dependencies -->
        <dependency>
            <groupId>com.sap.icf.samples</groupId>
            <artifactId>shoppinglist-db</artifactId>
            <version>${project.version}</version>
            <type>pom</type>
        </dependency>
        <dependency>
            <groupId>com.sap.icf.samples</groupId>
            <artifactId>shoppinglist-service</artifactId>
            <version>${project.version}</version>
            <type>jar</type>
        </dependency>
		<dependency>
            <groupId>com.sap.icf.samples</groupId>
            <artifactId>shoppinglist-ui</artifactId>
            <version>${project.version}</version>
            <type>pom</type>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <configuration>
                    <descriptors>
                        <descriptor>assembly.xml</descriptor>
                    </descriptors>
                </configuration>
                <executions>
                    <execution>
                        <id>assemble-mta-archive</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <archive>
                                <addMavenDescriptor>false</addMavenDescriptor>
                                <manifest>
                                    <addDefaultImplementationEntries>false</addDefaultImplementationEntries>
                                    <addDefaultSpecificationEntries>false</addDefaultSpecificationEntries>
                                </manifest>
                                <manifestSections><!-- TODO: Replace with your own artifact entries, be aware of the different types -->
                                    <manifestSection>
                                        <name>shoppinglist-ui/</name>
                                        <manifestEntries>
                                            <Content-Type>text/directory</Content-Type>
                                            <MTA-Module>shoppinglist-ui</MTA-Module>
                                        </manifestEntries>
                                    </manifestSection>
                                    <manifestSection>
                                        <name>shoppinglist-db/</name>
                                        <manifestEntries>
                                            <Content-Type>text/directory</Content-Type>
                                            <MTA-Module>shoppinglist-db</MTA-Module>
                                        </manifestEntries>
                                    </manifestSection>
                                    <manifestSection>
                                        <name>shoppinglist-service.jar</name>
                                        <manifestEntries>
                                          <contentType>application/zip</contentType>
                                          <MTA-Module>shoppinglist-service</MTA-Module>
                                        </manifestEntries>
                                    </manifestSection>
                                    <manifestSection>
                                        <name>META-INF/mtad.yaml</name>
                                        <manifestEntries>
                                            <Content-Type>text/plain</Content-Type>
                                        </manifestEntries>
                                    </manifestSection>
                                </manifestSections>
                            </archive>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <id>move-node-executable</id>
                        <phase>none</phase>
                    </execution>
                    <execution>
                        <id>delete-cfignore</id>
                        <phase>none</phase>
                    </execution>
                    <execution>
                        <id>filter-metadata</id>
                        <phase>none</phase>
                    </execution>
                    <execution>
                        <id>copy-jar-to-mtar</id>
                        <phase>package</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <target><!-- TODO Replace with your jar and artifact names-->
                                <copy
                                    file="${project.build.directory}/shoppinglist-assembly-${project.version}-mta.jar"
                                    tofile="${project.build.directory}/shoppinglist-assembly.mtar" />
                            </target>
                        </configuration>
                    </execution>
                    <!--
                    <execution>
                        <id>copy-SL_MANIFEST.XML</id>
                        <phase>package</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <target>
                                <copy file="./SL_MANIFEST.XML" tofile="${project.build.directory}/SL_MANIFEST.XML" />
                            </target>
                        </configuration>
                    </execution>
                -->
                </executions>
            </plugin>
            <!--
            <plugin>
                <groupId>com.sap.lm.sl.alm.prod.assembler</groupId>
                <artifactId>alm-prod-assembler-maven-plugin</artifactId>
                <version>0.9.0</version>
                <configuration>
                    <mtaSourceDirs>
                        <param>${project.build.directory}</param>
                    </mtaSourceDirs>
                    <targetDir>${project.build.directory}</targetDir>
                    <resultZip>${project.build.directory}/currency-rates-assembly-SCA-${project.version}.zip</resultZip>
                    <overwrite>true</overwrite>
                </configuration>
                <executions>
                    <execution>
                        <id>create-SCA</id>
                        <phase>package</phase>
                        <goals>
                            <goal>assemble</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>attach-distributions</id>
                        <phase>verify</phase>
                        <goals>
                            <goal>attach-artifact</goal>
                        </goals>
                        <configuration>
                            <artifacts>
                                <artifact>
                                    <file>${project.build.directory}/shoppinglist-assembly.mtar</file>
                                    <type>mtar</type>
                                </artifact>
                                <!--
                                <artifact>
                                    <file>${project.build.directory}/currency-rates-assembly-SCA-${project.version}.zip</file>
                                    <type>zip</type>
                                </artifact>
                            -->
                            </artifacts>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
